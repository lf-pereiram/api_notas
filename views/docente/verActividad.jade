      .card-image.waves-effect.waves-block.waves-light
        img.activator(src='../img/perfil.JPG', style='width: 20%;   ')
      .card-content
        span.card-title.activator.grey-text.text-darken-4
          | Ver Codigo fuente
          i.material-icons.right more_vert
        p
          a(href='#') Miller Aguirre
      .card-reveal
        span.card-title.grey-text.text-darken-4
          | Codigo
          i.material-icons.right close
    .row
      table.striped
        thead
          tr
            th(data-field='id') Requerimiento
            th(data-field='name') Nota
            th(data-field='name') Porcentaje
        tbody
          tr
            td Presentacion
            td
              input.validate(value='', id='', type='number')
            td 10%
          tr
            td Dise√±o
            td
              input.validate(value='', id='', type='number')
            td 20%
          tr
            td Calidad de Codigo
            td
              input.validate(value='', id='', type='number')
            td 70%
