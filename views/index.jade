doctype html
// Pagina de inicio que el permite el logeo por github
html(lang='en')
  head
    meta(charset='UTF-8')
    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    // Import materialize.css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css')
    link(rel='stylesheet', href='css/main.css')
    title Document
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='http://code.jquery.com/jquery-1.7.1.min.js')
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
  body
    .navbar-fixed
      nav
        .nav-wrapper.teal.darken-4
          a.brand-logo(href='#!') Logo
          ul.right.hide-on-med-and-down
            li
              a(href='#')
                i.fa.fa-github.fa-3x(aria-hidden='true')
    main
      .container
        .row.main-section
          form.col.s6.push-s3.teal.lighten-5.formulario(action='/users', method='POST')
            .row
              .row
                .input-field.col.s12
                  i.material-icons.prefix account_circle
                  input#email.validate(type='email', name='email')
                  label(for='email') Email
              .row
                .input-field.col.s12
                  i.material-icons.prefix vpn_key
                  input#password.validate(type='password', name='password')
                  label(for='password') Password
              .col.s6.push-s4
                button#login.btn.waves-effect.teal
                  | Entrar
                  i.material-icons.right send
    footer.page-footer.teal.darken-3
      .container
        .row
          .col.l6.s12
            h5.white-text Footer Content
            p.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.
          .col.l4.offset-l2.s12
            h5.white-text Links
      .footer-copyright
        .container
          | Â© 2016 Copyright
          a.grey-text.text-lighten-4.right(href='#!') More Links
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js')
